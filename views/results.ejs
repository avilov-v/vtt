<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visual Test Results</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .results-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 20px;
    }
    .results-row {
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin-bottom: 20px;
      width: 100%;
      max-width: 1200px;
    }
    .results-item {
      text-align: center;
    }
    .results-item img {
      max-width: 100%;
      height: auto;
      border: 1px solid #ccc;
      cursor: pointer;
    }
    .results-item h3 {
      margin-top: 10px;
    }
    /* Стили для модального окна */
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgb(0,0,0);
      background-color: rgba(0,0,0,0.9);
    }
    .modal-content {
      position: relative;
      margin: auto;
      padding: 0;
      width: 80%;
      max-width: 1200px;
    }
    .modal-content img {
      width: 100%;
      height: auto;
    }
    .close {
      position: absolute;
      top: 10px;
      right: 25px;
      color: #fff;
      font-size: 35px;
      font-weight: bold;
      cursor: pointer;
    }
    .modal-nav {
      position: absolute;
      top: 50%;
      width: 100%;
      display: flex;
      justify-content: space-between;
      transform: translateY(-50%);
    }
    .modal-nav span {
      cursor: pointer;
      color: white;
      font-size: 35px;
      user-select: none;
    }
  </style>
</head>
<body>
  <h1>Visual Test Results</h1>
  <div class="results-container">
    <div class="results-row">
      <h2>Страница логина</h2>
      <div class="results-item">
        <h3>Эталон</h3>
        <img src="/baseline/login.png" alt="Baseline Screenshot" class="clickable" data-type="login_baseline">
      </div>
      <div class="results-item">
        <h3>Отличия</h3>
        <img src="/results/login_diff.png" alt="Difference Screenshot" class="clickable" data-type="login_diff">
      </div>
      <div class="results-item">
        <h3>Новая версия</h3>
        <img src="/results/login.png" alt="New Screenshot" class="clickable" data-type="login_new">
      </div>
    </div>
    <div class="results-row">
      <h2>Список сотрудников</h2>
      <div class="results-item">
        <h3>Эталон</h3>
        <img src="/baseline/employees.png" alt="Baseline Screenshot" class="clickable" data-type="employees_baseline">
      </div>
      <div class="results-item">
        <h3>Отличия</h3>
        <img src="/results/employees_diff.png" alt="Difference Screenshot" class="clickable" data-type="employees_diff">
      </div>
      <div class="results-item">
        <h3>Новая версия</h3>
        <img src="/results/employees.png" alt="New Screenshot" class="clickable" data-type="employees_new">
      </div>
    </div>
  </div>
  <a href="/">Back to Home</a>

  <!-- Модальное окно -->
  <div id="myModal" class="modal">
    <span class="close">&times;</span>
    <div class="modal-content">
      <div class="modal-nav">
        <span class="prev">&#10094;</span>
        <span class="next">&#10095;</span>
      </div>
      <img id="modalImage" src="">
    </div>
  </div>

  <script>
    // JavaScript для модального окна и переключения изображений
    const modal = document.getElementById('myModal');
    const modalImg = document.getElementById('modalImage');
    const closeBtn = document.querySelector('.close');
    const prevBtn = document.querySelector('.prev');
    const nextBtn = document.querySelector('.next');
    const images = document.querySelectorAll('.clickable');
    let currentIndex = 0;

    const imageSources = {
      'login_baseline': '/baseline/login.png',
      'login_diff': '/results/login_diff.png',
      'login_new': '/results/login.png',
      'employees_baseline': '/baseline/employees.png',
      'employees_diff': '/results/employees_diff.png',
      'employees_new': '/results/employees.png'
    };

    const imageTypes = [
      'login_baseline', 'login_diff', 'login_new',
      'employees_baseline', 'employees_diff', 'employees_new'
    ];

    images.forEach((img, index) => {
      img.addEventListener('click', () => {
        modal.style.display = 'block';
        currentIndex = index;
        modalImg.src = img.src;
      });
    });

    closeBtn.addEventListener('click', () => {
      modal.style.display = 'none';
    });

    const showImage = (index) => {
      modalImg.src = imageSources[images[index].dataset.type];
    };

    prevBtn.addEventListener('click', () => {
      currentIndex = (currentIndex === 0) ? imageTypes.length - 1 : currentIndex - 1;
      showImage(currentIndex);
    });

    nextBtn.addEventListener('click', () => {
      currentIndex = (currentIndex === imageTypes.length - 1) ? 0 : currentIndex + 1;
      showImage(currentIndex);
    });

    window.addEventListener('click', (event) => {
      if (event.target === modal) {
        modal.style.display = 'none';
      }
    });

    window.addEventListener('keydown', (event) => {
      if (modal.style.display === 'block') {
        if (event.key === 'ArrowLeft') {
          currentIndex = (currentIndex === 0) ? imageTypes.length - 1 : currentIndex - 1;
          showImage(currentIndex);
        } else if (event.key === 'ArrowRight') {
          currentIndex = (currentIndex === imageTypes.length - 1) ? 0 : currentIndex + 1;
          showImage(currentIndex);
        } else if (event.key === 'Escape') {
          modal.style.display = 'none';
        }
      }
    });
  </script>
</body>
</html>

